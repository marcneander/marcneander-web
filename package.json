{
  "private": true,
  "name": "marcneander.com",
  "description": "Freelancing front-end engineer",
  "author": "Marc Neander <marcneander@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcneander/marcneander.com"
  },
  "keywords": [
    "marcneander",
    "react",
    "gatsby"
  ],
  "eslintConfig": {
    "extends": "@marcneander/react"
  },
  "stylelint": {
    "extends": "@marcneander/stylelint-config-styled-components"
  },
  "browserslist": [
    "> 1%",
    "not dead"
  ],
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/src/utils/setupTests.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      ".cache"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(gatsby)/)"
    ],
    "transform": {
      "^.+\\.(js|ts|tsx)$": "<rootDir>/src/utils/jestPreprocess.js"
    }
  },
  "scripts": {
    "lint": "yarn run lint:css && yarn run lint:js",
    "lint:js": "eslint src",
    "lint:css": "stylelint './src/**/*.js'",
    "build": "gatsby build",
    "serve": "gatsby serve",
    "develop": "gatsby develop",
    "clean": "gatsby clean",
    "jest": "jest",
    "test": "yarn run jest"
  },
  "dependencies": {
    "babel-plugin-styled-components": "1.11.1",
    "classnames": "2.2.6",
    "gatsby": "2.25.2",
    "gatsby-plugin-layout": "1.3.13",
    "gatsby-plugin-offline": "3.3.2",
    "gatsby-plugin-react-helmet": "3.3.14",
    "gatsby-plugin-styled-components": "3.3.14",
    "polished": "4.0.3",
    "prop-types": "15.7.2",
    "react": "17.0.1",
    "react-copy-to-clipboard": "5.0.2",
    "react-dom": "17.0.1",
    "react-helmet": "6.1.0",
    "react-transition-group": "4.4.1",
    "styled-components": "5.2.1"
  },
  "devDependencies": {
    "@babel/core": "7.12.3",
    "@marcneander/babel-preset-all": "1.0.7",
    "@marcneander/browserslist-config": "1.0.1",
    "@marcneander/eslint-config-react": "1.1.0",
    "@marcneander/stylelint-config-styled-components": "1.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "26.6.3",
    "babel-preset-gatsby": "0.5.16",
    "eslint": "7.12.1",
    "jest": "26.6.3",
    "jest-styled-components": "7.0.3",
    "jsdom": "16.4.0",
    "prettier": "2.1.2",
    "stylelint": "13.7.2"
  }
}
