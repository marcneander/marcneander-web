{
  "private": true,
  "name": "marcneander.io",
  "description": "Freelancing front-end engineer",
  "author": "Marc Neander <marcneander@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcneander/marcneander.io"
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "marcneander",
    "react",
    "gatsby"
  ],
  "eslintConfig": {
    "extends": "@marcneander/react"
  },
  "stylelint": {
    "extends": "@marcneander/stylelint-config-styled-components"
  },
  "browserslist": [
    "> 1%",
    "not dead"
  ],
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/utils/setupTests.js",
    "testPathIgnorePatterns": [
      "/node_modules/",
      ".cache",
      "cypress"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(gatsby)/)"
    ],
    "transform": {
      "^.+\\.(js|ts|tsx)$": "<rootDir>/src/utils/jestPreprocess.js"
    }
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "rebaseStalePrs": true,
    "automerge": true,
    "major": {
      "automerge": false
    }
  },
  "scripts": {
    "lint": "yarn run lint:css && yarn run lint:js",
    "lint:js": "eslint src",
    "lint:css": "stylelint './src/**/*.js'",
    "build": "gatsby build",
    "serve": "gatsby serve -p 8000 -H 0.0.0.0",
    "develop": "gatsby develop -H 0.0.0.0",
    "jest": "jest",
    "cypress": "cypress",
    "test": "yarn run jest && yarn run cypress run"
  },
  "dependencies": {
    "babel-plugin-styled-components": "1.10.0",
    "classnames": "2.2.6",
    "gatsby": "2.0.91",
    "gatsby-plugin-layout": "1.0.11",
    "gatsby-plugin-offline": "2.0.21",
    "gatsby-plugin-react-helmet": "3.0.5",
    "gatsby-plugin-styled-components": "3.0.4",
    "polished": "2.3.3",
    "prop-types": "15.6.2",
    "react": "16.7.0",
    "react-copy-to-clipboard": "5.0.1",
    "react-dom": "16.7.0",
    "react-helmet": "5.2.0",
    "react-transition-group": "2.5.3",
    "styled-components": "4.1.3"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@marcneander/babel-preset-all": "1.0.7",
    "@marcneander/browserslist-config": "1.0.0",
    "@marcneander/eslint-config-react": "1.0.2",
    "@marcneander/stylelint-config-styled-components": "1.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "23.6.0",
    "babel-preset-gatsby": "0.1.6",
    "cypress": "3.1.4",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.7.1",
    "enzyme-to-json": "3.3.5",
    "eslint": "5.12.1",
    "eslint-plugin-cypress": "2.2.0",
    "husky": "1.3.1",
    "jest": "23.6.0",
    "jest-styled-components": "6.3.1",
    "jsdom": "13.1.0",
    "lint-staged": "8.1.0",
    "prettier": "1.16.1",
    "stylelint": "9.10.1"
  }
}
